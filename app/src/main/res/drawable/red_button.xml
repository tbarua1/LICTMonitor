<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a1887f" />
            <stroke
                android:width="1dp"
                android:color="#ffff00" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#a1887f"
                android:endColor="#ffff00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffff00" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>

</selector>